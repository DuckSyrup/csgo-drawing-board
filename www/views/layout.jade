doctype html5
html
        head
                title CS: GO Drawing Board
                link(rel='stylesheet', href='/styles/main.css')
                block custHead
        body
                div#mainWrapper
                        div#header
                                div#navMain.navElement.left
                                        a(href='/').navLink CS: GO Drawing Board
                                        a(href='/create').navLink Create a strat
                                div#navUser.navElement.right
                                        if currUser
                                                a(href='/u/#{currUser}') #{currUser}
                                        else
                                                a(href='/auth/steam')
                                                    img(src='http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_large_border.png')
                        hr
                        if error
                                div#error
                                        div Error: #{error}
                        div#content
                                block content
                        hr
                        div#footer
